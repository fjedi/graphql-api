{
  "name": "@fjedi/graphql-api",
  "version": "7.1.1",
  "description": "GraphQL API with built-in REST API support",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "private": false,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "clean": "rimraf lib",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fjedi/graphql-api.git"
  },
  "keywords": [
    "fjedi",
    "graphql",
    "rest",
    "apollo"
  ],
  "author": "Alexander Radyushin <r.alex.andr@ya.ru> (https://fjedi.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fjedi/graphql-api/issues"
  },
  "homepage": "https://github.com/fjedi/graphql-api#readme",
  "dependencies": {
    "@fjedi/database-client": "4.0.1",
    "@fjedi/errors": "1.1.3",
    "@fjedi/jwt": "1.0.3",
    "@fjedi/logger": "1.46.1",
    "@fjedi/redis-client": "1.0.2",
    "@fjedi/rest-api": "2.0.0",
    "@graphql-tools/delegate": "7.1.2",
    "@types/component-emitter": "1.2.10",
    "@types/git-rev-sync": "2.0.0",
    "@types/ip": "1.1.0",
    "@types/useragent": "2.3.0",
    "@types/yup": "0.29.11",
    "apollo-progressive-fragment-matcher": "1.0.8",
    "apollo-server-cache-redis": "1.4.0",
    "apollo-server-koa": "2.23.0",
    "apollo-server-plugin-response-cache": "0.7.0",
    "bluebird": "3.7.2",
    "cookie": "0.4.1",
    "git-rev-sync": "3.0.1",
    "graphql": "15.5.0",
    "graphql-middleware": "6.0.7",
    "graphql-redis-subscriptions": "2.3.1",
    "graphql-shield": "7.5.0",
    "invariant": "2.2.4",
    "ip": "1.1.5",
    "json-buffer": "3.0.1",
    "lodash": "4.17.21",
    "useragent": "2.3.0"
  },
  "devDependencies": {
    "@types/cookie": "0.4.0",
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.43",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.25.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
